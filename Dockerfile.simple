FROM python:3.11-slim

# Instalar apenas dependências básicas
RUN apt-get update && apt-get install -y \
    && rm -rf /var/lib/apt/lists/*

# Definir diretório de trabalho
WORKDIR /app

# Instalar apenas NumPy e Pandas
RUN pip install --no-cache-dir numpy==1.24.3 pandas==2.0.3 pydantic==2.4.2

# Copiar código fonte
COPY . .

# Definir PYTHONPATH
ENV PYTHONPATH=/app

# Comando padrão
CMD ["python3", "tests/simple_integration_test_docker.py"]