# WOW Capital - Credenciais das Exchanges
# Template para configuração das credenciais
# IMPORTANTE: Nunca commitar este arquivo com credenciais reais!

# KRAKEN EXCHANGE
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_PRIVATE_KEY=your_kraken_private_key_here
KRAKEN_ENVIRONMENT=sandbox  # sandbox | live

# BYBIT EXCHANGE
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_ENVIRONMENT=testnet  # testnet | live
BYBIT_ACCOUNT_NAME=your_account_name

# OPENAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_org_id_here

# SISTEMA CONFIGURAÇÕES
TRADING_MODE=demo  # demo | paper | live
LOG_LEVEL=INFO
MAX_POSITION_SIZE_USD=1000  # Para testes demo
ENABLE_REAL_TRADING=false   # SEMPRE false para testes!